      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is AI safety?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "AI Safety is the field focused on ensuring that artificial intelligence systems are safe, beneficial, and aligned with human values as they become increasingly capable."
